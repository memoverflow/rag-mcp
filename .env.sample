# Environment Variables Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# AWS Configuration (Required)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Bedrock Configuration
BEDROCK_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_MAX_TOKENS=4096
BEDROCK_TEMPERATURE=0.7

# MCP Server Configuration
MCP_COMMAND=npx
MCP_ARGS=-y,@modelcontextprotocol/server-filesystem,<your path to test>

# Knowledge Base Configuration (Required)
KB_KNOWLEDGE_BASE_ID=your_knowledge_base_id_here
KB_DATA_SOURCE_ID=your_data_source_id_here
KB_S3_BUCKET=your_s3_bucket_name_here

# Chat Configuration
CHAT_MAX_TOOL_ROUNDS=5
CHAT_ENABLE_AUTO_TOOLS=true
